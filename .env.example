# Application Configuration
NODE_ENV=development           # Environment: development, production, or test
PORT=3000                      # Port the server will run on

# Database Configuration
DATABASE_URL=                  # Full database connection URL (e.g., postgres://user:password@localhost:5432/mydb)
DB_HOST=localhost              # Database host
DB_PORT=5432                   # Database port
DB_USER=                       # Database username
DB_PASSWORD=                   # Database password
DB_NAME=                       # Database name

# Authentication & Security
JWT_SECRET=                    # Secret key for JWT signing and verification
JWT_EXPIRES_IN=1h              # Expiration time for JWT tokens
COOKIE_SECRET=                 # Secret key for secure cookies

# Third-Party APIs
API_KEY=                       # Example for third-party API key
API_SECRET=                    # Example for third-party API secret
STRIPE_SECRET_KEY=             # Stripe secret key for payment processing
SENDGRID_API_KEY=              # SendGrid API key for email services

# Cloud Storage (AWS Example)
AWS_ACCESS_KEY_ID=             # AWS access key
AWS_SECRET_ACCESS_KEY=         # AWS secret access key
AWS_REGION=us-east-1           # AWS region
S3_BUCKET_NAME=                # S3 bucket name

# Email Configuration
SMTP_HOST=smtp.mailtrap.io     # SMTP host for email service
SMTP_PORT=2525                 # SMTP port
SMTP_USER=                     # SMTP username
SMTP_PASSWORD=                 # SMTP password
EMAIL_FROM=noreply@example.com # Default sender email address

# Application-Specific Variables
FRONTEND_URL=http://localhost:3000 # Frontend application URL
REDIS_URL=                     # Redis connection URL (for caching, sessions, etc.)
DEBUG=true                     # Enable or disable debug logs
